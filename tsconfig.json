{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "strict": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "lyxe/lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "./src"
  ]
}
